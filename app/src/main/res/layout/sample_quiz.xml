<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_android_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/cardview_shadow_start_color"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama kamu Siapa"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_android_image"
        app:layout_constraintEnd_toEndOf="@id/iv_android_image"
        app:layout_constraintStart_toStartOf="@id/iv_android_image"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_hobi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hobi kamu ngapain sih"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_nama"
        app:layout_constraintEnd_toEndOf="@id/tv_nama"
        app:layout_constraintStart_toStartOf="@id/tv_nama"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_asal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asal kota"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/tv_hobi"
        app:layout_constraintTop_toBottomOf="@id/tv_hobi"
        app:layout_constraintStart_toStartOf="@id/tv_hobi" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_asal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_setting"/>

    <Button
        android:id="@+id/btn_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_asal"
        app:layout_constraintEnd_toStartOf="@id/btn_logout"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>